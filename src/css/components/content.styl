.b-content
    display flex
    flex-direction column
    width 100%
    height 100%

    &__messages
        display flex
        flex-direction column
        min-height 1px
        border-bottom 1px solid rgba(38, 47, 56, 0.1)

    &__bottom-panel
        padding 13px 20px
        height 60px
        background-color white
        box-shadow 0 -2px 6px rgba(0, 0, 0, 0.1)
        display flex
        justify-content space-between
        align-items center

        p
            color rgb(38, 47, 56)
            font-family $font-main
            font-size 16px
            font-weight 500
            line-height 22px
            margin 0

        span
            color rgb(29, 211, 132)
            font-family $font-main
            font-size 22px
            font-weight 700
            line-height 30px
            position relative
            bottom -1px