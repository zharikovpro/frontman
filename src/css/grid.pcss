.container {
  margin: 40px;
  width: calc(var(--main_width) / 2);
  background-color: #ccc;
}

.grid {
  lost-utility: clearfix;

  &__col {
    margin: 5px 0;
    padding: 0;
    background-color: #333;
    color: #fff;

    &_1-of-2 {
      lost-column: 1/2;
    }

    &_1-of-3 {
      lost-column: 1/3;
    }
  }
}
