$b-button-width = 192px
$b-button-height =  50px
$b-button-border-radius = 4px
$b-button-font-size = 18px

.b-button
    width $b-button-width
    height $b-button-height
    display inline-block
    border-radius $b-button-border-radius
    box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
    font-family $font-main
    font-size $b-button-font-size
    font-weight 700
    letter-spacing 0.82px
    line-height 25px
    color white
    padding 0
    cursor pointer
    background #a9b9c9
    //background rgba(38, 47, 56, 0.1)
    border 1px solid #9eafc0

    &:hover
        background-color #8a9eb3
        border 1px solid #748ca4

    &:active
        background-color #b1c4d6
        border 1px solid #9eafc0

    &--green
        background-color #1dd384
        border 1px solid #1ac47b

        &:hover
            background-color #0db66d
            border 1px solid #0d9c5e

        &:active
            background-color #2de193
            border 1px solid #0db66d

    &--black
        width 78px
        background #262f38 !important
        border-radius 0 2px 2px 0
        text-shadow none
        color #fff

        &:active
        &:focus
        &:hover
        &:hover:active
            text-shadow none
            color #fff

    &--login
        margin-right 20px
        display flex
        align-items center
        padding 8px
        text-align center
        width 240px
        height 32px
        color white
        font-size 14px
        font-weight 700
        letter-spacing 0.64px
        line-height 19px

        > i
            font-size 20px
            display inline-block
            margin-right 10px

    &--roll
        width 371px
        height 50px

    &--bootstrap

        &:active
        &:focus
        &:hover
        &:hover:active
            text-shadow none
            color initial

    &--100
        margin-top 9px
        margin-left -1px
        width 100%
        box-sizing content-box
