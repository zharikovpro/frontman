.b-modal
    width 1058px
    font-family $font-main

    &__grid-row
        display flex
        border-bottom 1px solid #e2eaef
        padding 16px 5px 14px 37px

    &__grid-cell
        margin-right 60px

    &__name
        font-family $font-main
        color #63717d
        font-size 12px
        font-weight 400
        line-height 16px

    &__text
        font-family $font-main
        color #63717d
        font-size 16px
        font-weight 400
        line-height 22px

    &__link
        color #1dd384
        text-decoration none
        display inline-block
        margin 0 0 0 5px
        font-size 16px
        font-weight 500
        line-height 22px
        opacity 1

    .close
        opacity 1

    .modal-content
        border-radius 5px

    .modal-title
        margin 2px
        display flex
        align-items center
        font-size 32px

    .modal-header
        padding-left 37px
        height 77px
        color #262f38
        font-size 32px
        font-weight 400
        line-height 44px

    .modal-body
        padding 34px 30px 35px 37px
        p
            color #63717d
            font-size 16px
            font-weight 500
            line-height 22px

    .modal-body_nop
        padding 0