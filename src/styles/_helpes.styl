.b-100h
    height 100%

.b-hidden
    display none

.nano-pane
    display none !important

.slim
    margin-top 20px
    margin-right 20px
    margin-left 20px
    > [class^="col-"]
        padding-left 5px
        padding-right 5px

        &:first-child
            padding-left 0

        &:last-child
            padding-right 0

.dont-br
    &--left
        border-top-left-radius 0 !important
        border-bottom-left-radius 0 !important
    &--right
        border-top-right-radius 0 !important
        border-bottom-right-radius 0 !important

.b-ib
    display inline-block