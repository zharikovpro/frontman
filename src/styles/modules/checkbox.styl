.b-checkbox
    cursor pointer
    position relative
    left 5px

    span
        order 2

    &:before
        content ""
        margin-top -2px
        display inline-block
        width 22px
        height 22px
        background-color rgba(38,47,56,0.1)
        border 1px solid rgba(38,47,56,0.2)
        border-radius 2px
        order 1
        position relative
        left -18px
        margin-right -7px

    &:after
        top -1px
        content ""
        width 14px
        height 14px
        background transparent
        position relative
        order 0
        border-radius 2px

    input[type=radio]:checked + &:after
        border 1px solid #1ac47b
        box-shadow 0 1px 2px rgba(0, 0, 0, 0.1)
        background #1dd384