.b-input
    display block
    width 212px
    height 50px
    background-color rgba(38, 47, 56, 0.1)
    border 1px solid rgba(38, 47, 56, 0.2)
    border-radius 2px
    padding 14px 20px
    color #63717d
    font-family $font-main
    font-size 16px
    font-weight 500
    line-height 22px
    box-shadow none

    &.form-control
        border-color rgba(38, 47, 56, 0.2)
        outline 0
        box-shadow none

    &:focus
        outline-color rgb(223, 215, 207)
        outline-offset -2px
        outline-style auto
        outline-width 5px

    &::-webkit-input-placeholder
        opacity 0.5
        color #63717d
        font-family $font-main
        font-size 16px
        font-weight 500
        line-height 22px

    &:-moz-placeholder
        opacity 0.5
        color #63717d
        font-family $font-main
        font-size 16px
        font-weight 500
        line-height 22px

    &--little
        width 90px
        text-align center

    &--square
        text-align center
        width 53px
        padding 14px 10px

    &--resize
        width 100%