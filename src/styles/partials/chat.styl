$chat-padding = 20px

.b-chat
    width 100%
    height 100%
    background-color #262f38
    display flex
    flex-direction column
    align-items stretch
    font-family $font-main

    &__input
        box-sizing content-box
        padding  $chat-padding
        padding-top 5px

        p
            color rgba(255, 255, 255, 0.2)
            font-size 12px
            font-weight 300
            line-height 16px
            text-align right
            margin 0 2px 3px 0

        input
            background-color rgba(255, 255, 255, 0.1)
            border 1px solid rgba(255, 255, 255, 0.2)
            border-radius 2px

.b-chat-message
    box-sizing content-box
    padding $chat-padding

    &--dark
        background-color #1c242c

    &__header
        display flex
        justify-content space-between
        align-items center

    &__user
        margin 0
        padding 0
        width 100%
        display flex
        align-items center

    &__nik
        display inline-block
        color white
        font-size 12px
        font-weight 300
        line-height 16px
        margin-left 8px

    &__time
        color rgba(255, 255, 255, 0.2)
        font-size 12px
        font-weight 300
        line-height 16px

    &__text
        margin-top 10px
        color rgba(256, 256, 256, 0.8)
        font-size 16px
        font-weight 400
        line-height 22px